<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bak2"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/drivermediumimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:paddingLeft="25dp"
                android:layout_gravity="center_vertical|top"
                android:src="@drawable/driver" />

            <TextView
                android:id="@+id/tvdrivernameandmediumLVL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..........." />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="vertical" >
            
            <TextView
                android:id="@+id/tvdrivermediumScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..........." />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="vertical" >

                <ImageView
                android:id="@+id/drivermediumLogOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:src="@drawable/logout" />
            
            
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
             android:paddingTop="30dp"
            android:orientation="vertical" >

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/mediumfirst"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:layout_gravity="top"
                android:src="@drawable/mediumfirst" />

            <ImageView
                android:id="@+id/mediumsecond"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="top"
                android:scaleType="fitXY"
                android:src="@drawable/mediumsecond" />

        </LinearLayout>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/mediumthird"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:layout_gravity="top"
                android:src="@drawable/mediumthird" />


        </LinearLayout>
                      <ImageView
                android:id="@+id/mediumback"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:paddingTop="15dp"
                android:layout_gravity="center"
                android:src="@drawable/back" />
        </LinearLayout>
    </ScrollView>
          
</LinearLayout>